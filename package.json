{
  "name": "@instill-ai/design-system",
  "version": "0.0.52",
  "description": "Instill AI's design system",
  "repository": "https://github.com/instill-ai/design-system.git",
  "bugs": "https://github.com/instill-ai/design-system/issues",
  "keywords": [
    "instill-ai",
    "design-system",
    "ui",
    "react"
  ],
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache",
    "lint:time": "TIMING=1 eslint . --ext .ts,.tsx,.js,.jsx --cache",
    "lint:debug": "eslint . --ext .ts,.tsx,.js,.jsx --cache --debug",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o out",
    "prepare": "husky install",
    "prettier:fix": "prettier --write",
    "prettier:check": "prettier --check",
    "test:coverage": "jest --collectCoverage",
    "ts-types": "tsc --emitDeclarationOnly --outDir build",
    "build": "rimraf build && node ./esbuild.js && yarn ts-types",
    "test": "jest"
  },
  "main": "build/index.cjs.js",
  "module": "build/index.esm.js",
  "typings": "build/index.d.ts",
  "files": [
    "build"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@playwright/test": "^1.20.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-a11y": "^6.4.20",
    "@storybook/addon-actions": "^6.5.0-alpha.51",
    "@storybook/addon-essentials": "^6.5.0-alpha.51",
    "@storybook/addon-interactions": "^6.5.0-alpha.51",
    "@storybook/addon-links": "^6.5.0-alpha.51",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.0-alpha.51",
    "@storybook/manager-webpack5": "^6.5.0-alpha.51",
    "@storybook/mdx2-csf": "^0.0.1-canary.1.838a6ca.0",
    "@storybook/react": "^6.5.0-alpha.51",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.4",
    "esbuild": "^0.14.34",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.12.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.7",
    "eslint-plugin-testing-library": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-select": "^5.2.2"
  },
  "peerDependencies": {
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-select": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier:fix",
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.stories.{ts,tsx}": [
      "yarn prettier:fix",
      "eslint --cache --fix"
    ]
  }
}